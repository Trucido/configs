#define FONT -*-terminus-medium-r-*-*-16-*-*-*-*-*-*-*

! urxvt ------------------------------------------------------------------------

URxvt.geometry: 80x25

URxvt.font: FONT

URxvt.perl-ext-common: 
URxvt.urgentOnBell: true

URxvt.cursorUnderline: true
URxvt.cursorBlink: true

URxvt.scrollBar: false

URxvt.transparent: true
URxvt.shading: 50

! Colour Scheme {{{
URxvt.background: #000000
URxvt.foreground: #AAAAAA
! Black
URxvt.color0: #000000
URxvt.color8: #555555
! Red
URxvt.color1: #AA0000
URxvt.color9: #FF5555
! Green
URxvt.color2: #00AA00
URxvt.color10: #55FF55
! Yellow
URxvt.color3: #AA5500
URxvt.color11: #FFFF55
! Blue
URxvt.color4: #0000AA
URxvt.color12: #5555FF
! Magenta
URxvt.color5: #AA00AA
URxvt.color13: #FF55FF
! Cyan
URxvt.color6: #00AAAA
URxvt.color14: #55FFFF
! White
URxvt.color7: #AAAAAA
URxvt.color15: #FFFFFF
! }}}

! Emacs ------------------------------------------------------------------------

emacs.font: FONT
emacs.menuBar: off
emacs.verticalScrollBars: off
emacs.toolBar: off
emacs.foreground: lightgray
emacs.background: black
emacs.internalBorder: 0

! xautolock --------------------------------------------------------------------

Xautolock.time: 1
Xautolock.locker: slock

! FvwmConsole ------------------------------------------------------------------
FvwmConsole*VT100*geometry: 80x25
FvwmConsole*font: FONT
