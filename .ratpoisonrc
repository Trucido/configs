# woddfellow2's ratpoison Config
# by woddfellow2 | http://wlair.us.to/

# Appearance
set font Terminus-12
set border 0
set wingravity c
set bgcolor black
set fgcolor green
set bargravity c

startup_message off
set waitcursor 0

# Use urxvt instead of xterm
bind c exec urxvt
bind C-c exec urxvt
bind C-exclam colon exec urxvt -e 

# Lock screen command directly inspired by GNU Screen's lockscreen keybinding
bind x exec xscreensaver-command -lock

# urxvt/screen, GNU IceCat, and emacsclient keybindings
bind asciitilde exec urxvt -sl 0 -e screen -c ~/.screen/screenrc-startup -dRR
bind e exec emacsclient -alternate-editor="" -c
bind M-f exec icecat

# Rudeness
rudeness 1

# Resize 1 pixel at a time
set resizeunit 1

# Display window size(s) in window list
set winfmt %n%s%t (%Wx%H)

# Switch to twm
alias float tmpwm twm
bind bar float

# Banish pointer
banish

# xmodmap and Dvorak
bind M-0 exec xmodmap ~/.Xmodmap
bind M-1 exec setxkbmap us
bind M-2 exec setxkbmap dvorak
