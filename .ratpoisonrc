# ~/.ratpoisonrc

set border 0
set wingravity c
set bgcolor black
set fgcolor green
set bargravity c
set font Fixed-12

startup_message off
set waitcursor 0
alias lockscreen exec xautolock -locknow
bind x lockscreen

bind e exec emacsclient -alternate-editor="" -c

# Use urxvt instead of xterm
bind c exec urxvt
bind C-c exec urxvt
bind C-exclam colon exec urxvt -e 

bind asciitilde exec urxvt -sl 0 -e screen -dRR
bind M-c exec conkeror

rudeness 1

set resizeunit 1
set winfmt %n%s%t (%Wx%H)

alias float tmpwm twm
bind bar float

banish
