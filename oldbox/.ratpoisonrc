# $Id: .ratpoisonrc,v 1.1 2013/12/11 07:12:07 xoddf2 Exp $

# Change prefix key to CTRL+;  (Chosen because Emacs appears not to use it.)
escape C-semicolon
unbind a
unbind C-a
bind t time
bind C-t time

# How to display the windows
set border 0
set wingravity c

# Display window sizes in the window list
set winfmt %n%s%t (%Wx%H)

# Appearance
set font Fixed-11
set bargravity c
set bgcolor black
set fgcolor green

startup_message off

# Keybindings
bind x exec xscreensaver-command -lock
bind o focus
bind O focusprev

newkmap logins
definekey logins r exec xterm -e ssh rofldell.local
definekey logins m exec xterm -e ssh tesseract.hackerhaven.net
definekey logins d exec xterm -e ssh is.not.a.hax0r.se
definekey logins t exec xterm -e ssh turtil.net
bind L readkey logins

newkmap apps
definekey apps e exec emacsclient --alternate-editor='' -c
definekey apps c exec xterm -e screen -dRR
definekey apps w exec mozilla
definekey apps g exec gimp
bind a readkey apps

# Rat-related commands
warp on
banish
