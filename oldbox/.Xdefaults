! woddfellow2's ~/.Xdefaults (oldbox)
! by woddfellow2 | http://wlair.us.to/

Xft.dpi: 96

! Terminal Emulators
Rxvt.font: -xos4-terminus-medium-r-*-*-16-*-*-*-*-*-*-*
Rxvt.reverseVideo: true
Rxvt.urgentOnBell: true
Rxvt.scrollBar: false
URxvt.pointerBlank: true
URxvt.perl-ext-common: keyboard-select
URxvt.keysym.Menu: perl:keyboard-select:activate

XTerm.vt100.locale: UTF-8
XTerm.vt100.font: -misc-fixed-medium-r-*-*-15-*-*-*-*-*-*-*
XTerm.vt100.utf8Fonts.font: -misc-fixed-medium-r-*-*-15-*-*-*-*-*-*-*
XTerm.vt100.reverseVideo: true
XTerm.vt100.altIsNotMeta: true
XTerm.vt100.altSendsEscape: true
XTerm.vt100.scrollBar: true

! Emacs
emacs.font: -adobe-courier-medium-r-*-*-14-*-*-*-*-*-*-*
emacs.menuBar: off
emacs.verticalScrollBars: off
emacs.toolBar: off
emacs.internalBorder: 0

! xbiff
XBiff*checkCommand: fetchmail -d0 -csk
XBiff*update: 300
XBiff*flip: false
XBiff*fullPixmap: mailfull
XBiff*emptyPixmap: mailempty
