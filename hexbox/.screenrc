# $Id: .screenrc,v 1.2 2013/10/05 12:44:36 xoddf2 Exp $

# Disable visual bell
vbell off

# Crash protection
autodetach on

# Do not display splash screen
startup_message off

# Scrollback buffer
defscrollback 1000

# Status line
hardstatus alwayslastline "%{= G}%w%{= d}%=%{= C}%l%{= d} %{= Y}%H%{= d}"

# This way, if a background window beeps, I will not miss it;
# note the ^G at the beginning
bell_msg "^GBell in window %n"
activity "^GActivity in window %n"

# Add day of week and change date to ISO 8601 format
time "%D %Y-%m-%d %c:%s %H%? %l%?"

# Startup Applications
screen -t shell 0
screen -t emacs 1 emacsclient --alternate-editor='' -nw
