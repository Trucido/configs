# ~/.muttrc 2.0
# Last Modified: Sun Nov 30 01:06:55 PST 2014

# Where to send and receive mail
set mbox_type = Maildir
set ssl_force_tls = yes

set smtp_url = "smtps://woddfellow2@gmail.com@smtp.gmail.com/"

source ~/.mutt/auth

# Identity
set from = "woddfellow2@gmail.com"
set realname = "woddfellow2"

# Folders
set folder = "~/Mail/Gmail"
set spoolfile = "+INBOX"
set mbox = "+[Gmail]/All Mail"
set postponed = "+[Gmail]/Drafts"

mailboxes = "+INBOX"

# This prevents it from moving freshly-read messages:
set move = no

# Gmail already has its own "Sent Mail" folder:
unset record

# Checking for new messages
set beep_new = yes

# Interface
set quit = ask-yes
set pager_index_lines = 7

# Other
set include
set sort = "threads"

# X-Face
my_hdr X-Face: +@FXO@ZIFJ\;<M.tf<W4[R(5%E:]K:Uv\\T5Y\#EUd:JQ^*PQ\$+XxR,3w>=/+)\#\"]=\\mvUKNMH\n Wc*aa-a]VA5T|roXtqmgVP~(ID=A!J+^n>4\;+OrPTZ|jiRKdbI7VJ&OmElCGa8\$as\;NDX=]5{f[mC3\n i\#R~xvQ^\`2vAw>ZrG\'sH^ciF_

# PGP
set pgp_decode_command = "gpg2 %?p?--passphrase-fd 0? --no-verbose --batch --output - %f"
set pgp_verify_command = "gpg2 --no-verbose --batch --output - --verify %s %f"
set pgp_decrypt_command = "gpg2 --passphrase-fd 0 --no-verbose --batch --output - %f"
set pgp_sign_command = "gpg2 --no-verbose --batch --output - --passphrase-fd 0 --armor --detach-sign --textmode %?a?-u %a? %f"
set pgp_clearsign_command = "gpg2 --no-verbose --batch --output - --passphrase-fd 0 --armor --textmode --clearsign %?a?-u %a? %f"
set pgp_encrypt_only_command = "pgpewrap gpg2 --batch --quiet --no-verbose --output - --encrypt --textmode --armor --always-trust --encrypt-to 0x20EB90D3 -- -r %r -- %f"
set pgp_encrypt_sign_command = "pgpewrap gpg2 --passphrase-fd 0 --batch --quiet --no-verbose --textmode --output - --encrypt --sign %?a?-u %a? --armor --always-trust --encrypt-to 0x20EB90D3 -- -r %r -- %f"
set pgp_import_command = "gpg2 --no-verbose --import -v %f"
set pgp_export_command = "gpg2 --no-verbose --export --armor %r"
set pgp_verify_key_command = "gpg2 --no-verbose --batch --fingerprint --check-sigs %r"
set pgp_list_pubring_command = "gpg2 --no-verbose --batch --with-colons --list-keys %r"
set pgp_list_secring_command = "gpg2 --no-verbose --batch --with-colons --list-secret-keys %r"
set pgp_autosign = yes
set pgp_sign_as = "0x20EB90D3"
set pgp_replyencrypt = "yes"
set pgp_timeout = 900
set pgp_good_sign = "^gpg: Good signature from"

# Colours
source ~/.mutt/colors/colors256-dark
