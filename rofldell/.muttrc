# Auth
set imap_user = "woddfellow2@gmail.com"
set ssl_force_tls = yes

set smtp_url = "smtps://woddfellow2@gmail.com@smtp.gmail.com/"

# Powerword: Real Name
set from = "woddfellow2@gmail.com"
set realname = "woddfellow2"

# Folders
set folder = "imaps://imap.gmail.com/"
set spoolfile = "+INBOX"
mailboxes = "+INBOX"
set postponed = "+[Gmail]/Drafts"

# This prevents it from moving freshly-read messages:
set move = no

# Gmail already has its own "Sent Mail" folder:
unset record

# Checking for New Messages
set beep_new = yes

set mail_check = 300
set imap_keepalive = 150

# Other
set include
set sort = "threads"

