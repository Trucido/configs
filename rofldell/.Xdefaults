! woddfellow2's ~/.Xdefaults (rofldell)
! by woddfellow2 | http://wlair.us.to/

! xterm ------------------------------------------------------------------------
XTerm.vt100.loginShell: true
XTerm.vt100.locale: UTF-8

! Make ALT/META do what it should
XTerm.vt100.altIsNotMeta: true
XTerm.vt100.altSendsEscape: true

! Hide pointer
XTerm.vt100.pointerMode: 2

XTerm.vt100.bellIsUrgent: true

! Appearance
XTerm.vt100.font: -misc-fixed-medium-r-*-*-13-*-*-*-*-*-iso10646-1
XTerm.vt100.utf8Fonts.font: -misc-fixed-medium-r-*-*-13-*-*-*-*-*-iso10646-1
XTerm.vt100.wideFont: -*-*-*-*-*-ja-*-*-*-*-*-*-*-*
XTerm.vt100.background: black
XTerm.vt100.foreground: white
XTerm.vt100.scrollBar: false

! xclock -----------------------------------------------------------------------
XClock.Clock.background: black
XClock.Clock.foreground: green
XClock.Clock.analog: false
XClock.Clock.update: 1
XClock.Clock.face: Fixed-13:foundry=misc:weight=bold:slant=roman
XClock.Clock.render: true

! xload ------------------------------------------------------------------------
XLoad*background: black
XLoad*foreground: white
XLoad*highlight: red

! xbiff ------------------------------------------------------------------------
XBiff.Mailbox.checkCommand: fetchmail -d0 -csk
XBiff.Mailbox.update: 300
XBiff.Mailbox.background: black
XBiff.Mailbox.foreground: green
