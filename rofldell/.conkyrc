# .conkyrc 2.0.3   Time-stamp: <2014-11-10 01:13:00 PST xoddf2>   -*- Conf -*-

# Where to appear
out_to_console no
own_window no

# Font
use_xft yes
override_utf8_locale yes
xftfont Fixed:pixelsize=10

# Prevent flickering
double_buffer yes

# Position and size
alignment top_left
gap_x 8
gap_y 8
maximum_width 220

# Readability
draw_outline yes

# How often to update
update_interval 1

# For weather and CPU
temperature_unit celsius

