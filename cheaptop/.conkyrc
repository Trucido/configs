# .conkyrc 2.5.1   Time-stamp: <2016-01-24 03:33:19 PST xoddf2>   -*- Conf -*-

# Where to appear
out_to_console no

# Font
use_xft yes
override_utf8_locale yes
xftfont Fixed:pixelsize=10

# Transparency
own_window yes
own_window_type override
own_window_transparent no
own_window_argb_visual yes
own_window_argb_value 192

# Prevent flickering
double_buffer yes

# Position and size
alignment top_right
gap_x 8
gap_y 8
maximum_width 274

# How often to update
update_interval 1
update_interval_on_battery 5

# For weather and CPU
temperature_unit celsius

