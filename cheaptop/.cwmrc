# .cwmrc 1.3.4
# Time-stamp: <2016-01-06 19:43:23 PST xoddf2>

# Appearance ###################################################################

fontname "Fixed:pixelsize=15:bold"

# Window decorations
color activeborder "#5FAF5F"
color inactiveborder "#808080"

color groupborder green
color ungroupborder blue

# Urgent windows
color urgencyborder "#FF5F00"

# Menu
color menubg "#1C1C1C"
color menufg "#5FAF5F"
color font "#5FAF5F"

# Applications #################################################################

command term urxvtc
command lock "xscreensaver-command -lock"

command tmux "urxvtc -sl 0 -name tmux -e tmux attach-session"
command emacs "emacsclient -a '' -c"
command www seamonkey
command music audacious
command vlc vlc
command gimp gimp
command xpdf xpdf
command vbox VirtualBox

# "SSH to..." menu won't let me use mosh
command mosh-elisabeth "urxvtc -T '[mosh] is.not.a.hax0r.se' -e mosh is.not.a.hax0r.se"

# Keybindings ##################################################################

# Tiling
bind 4-t htile
bind 4-T vtile

# This is easier to press than CM-delete
bind 4-Escape lock

# Cycle through current group
bind 4-Tab cycleingroup
bind 4S-Tab rcycleingroup

# Kill a window
bind CM-Escape xkill

# Volume
bind XF86AudioLowerVolume "amixer set Master 1-"
bind XF86AudioRaiseVolume "amixer set Master 1+"
bind XF86AudioMute "amixer set Master toggle"

# Audacious
bind 4-z "audacious --rew"
bind 4-x "audacious --play"
bind 4-c "audacious --pause"
bind 4-v "audacious --stop"
bind 4-b "audacious --fwd"

# For the sake of completion
bind XF86AudioPrev "audacious --rew"
bind XF86AudioPlay "audacious --pause"
bind XF86AudioNext "audacious --fwd"

# To avoid conflicting with Emacs undo keybinding
bind C-slash unmap
bind CM-slash menusearch

# Other ########################################################################

snapdist 8

# Ignored Windows ##############################################################

ignore xconsole
ignore xclock
ignore xload
ignore xbiff

# Groups #######################################################################

# Main
autogroup 1 URxvt
autogroup 1 Emacs

# WWW
autogroup 2 Seamonkey

# Media
autogroup 3 feh
autogroup 3 mpv

# The GIMP
autogroup 4 gimp

# Emulators, VMs, etc
autogroup 5 Dgen
autogroup 5 UAE
autogroup 5 qemu-system-i386
autogroup 5 qemu-system-x86_64
autogroup 5 qemu-system-arm
autogroup 5 VirtualBox
autogroup 5 Xephyr
