bind CMS-equal	unmap
bind M-question	unmap
bind M-period	unmap
bind CM-w	unmap
bind CMS-r	unmap
bind CMS-q	unmap
bind C-Up	unmap
bind C-Down	unmap
bind C-Left	unmap
bind C-Right	unmap
bind CS-Up	unmap
bind CS-Down	unmap
