# Launching
bind 4S-Return	terminal
bind 4-question	exec
bind 4-comma	menusearch
bind 4-period	ssh

# Groups
bind 4-1	group1
bind 4-2	group2
bind 4-3	group3
bind 4-4	group4
bind 4-5	group5
bind 4-6	group6
bind 4-7	group7
bind 4-8	group8
bind 4-9	group9
bind 4-0	nogroup
bind 4S-1	movetogroup1
bind 4S-2	movetogroup2
bind 4S-3	movetogroup3
bind 4S-4	movetogroup4
bind 4S-5	movetogroup5
bind 4S-6	movetogroup6
bind 4S-7	movetogroup7
bind 4S-8	movetogroup8
bind 4S-9	movetogroup9
bind 4-g	grouptoggle
bind 4-p	rcyclegroup
bind 4-n	cyclegroup

# Moving
bind 4-h	moveleft
bind 4-j	movedown
bind 4-k	moveup
bind 4-l	moveright
bind 4S-h	bigmoveleft
bind 4S-j	bigmovedown
bind 4S-k	bigmoveup
bind 4S-l	bigmoveright

# Resizing
bind 4C-h	resizeleft
bind 4C-j	resizedown
bind 4C-k	resizeup
bind 4C-l	resizeright
bind 4CS-h	bigresizeleft
bind 4CS-j	bigresizedown
bind 4CS-k	bigresizeup
bind 4CS-l	bigresizeright
bind 4-f	maximize
bind 4-equal	vmaximize
bind 4-plus	hmaximize
bind 4S-f	freeze

# Focus
bind 4-Tab	cycle
bind 4S-Tab	rcycle
bind 4-slash	search

# Z-order and Visibility
bind 4-Return	hide
bind 4S-space	lower
bind 4-space	raise

# Leave
bind 4-Escape	lock
bind 4S-w	exec_wm
bind 4S-r	restart
bind 4S-bar	quit

# Move Pointer
bind 4M-h	ptrmoveleft
bind 4M-j	ptrmovedown
bind 4M-k	ptrmoveup
bind 4M-l	ptrmoveright
bind 4MS-h	bigptrmoveleft
bind 4MS-j	bigptrmovedown
bind 4MS-k	bigptrmoveup
bind 4MS-l	bigptrmoveright

# Other
bind 4S-c	delete
bind 4S-n	label

# Tiling
bind 4-t	htile
bind 4S-t	vtile

# Mouse Bindings ###############################################################
mousebind M-1	unmap
mousebind CM-1	unmap
mousebind M-2	unmap
mousebind M-3	unmap
mousebind CMS-3	unmap

mousebind 4-1	window_move
mousebind C4-1	window_grouptoggle
mousebind 4-2	window_resize
mousebind 4-3	window_lower
mousebind C4S-3 window_hide
