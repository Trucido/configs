! woddfellow2's ~/.Xdefaults (genesis)
! by woddfellow2 | http://wlair.us.to

! xterm
XTerm.vt100.loginShell:true
XTerm.vt100.locale: UTF-8

XTerm.vt100.altIsNotMeta: true
XTerm.vt100.altSendsEscape: true
XTerm.vt100.pointerMode: 2

XTerm.vt100.scrollBar: true

XTerm.vt100.background: black
XTerm.vt100.foreground: white

! rxvt-unicode
URxvt.loginShell: true
URxvt.locale: UTF-8
URxvt.urgentOnBell: true

URxvt.scrollBar: false

URxvt.background: black
URxvt.foreground: grey

URxvt.font: -misc-fixed-medium-r-*-*-10-*-*-*-*-*-*-*
URxvt.boldFont: -misc-fixed-medium-r-*-*-10-*-*-*-*-*-*-*
URxvt.colorBD: white

! xload
XLoad*update: 1

! xbiff
XBiff*checkCommand: fetchmail -d0 -csk
XBiff*update: 300
